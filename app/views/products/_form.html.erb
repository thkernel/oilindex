<%= form_with(model: product, local: false) do |form| %>
 <div class="modal-body">
		<ul class="errors">
    </ul>

    <div class="row">
      <div class="col">
        <div class="form-group">
          <%= form.label :product_category_id, "Catégorie", class: "required" %>
          <%= form.collection_select :product_category_id, @product_categories, :id, :name, {prompt: "Sélectionner"}, class: "form-control", style: "width: 100%;", required: true %>
        </div>
     
      
        <div class="form-group">
          <%= form.label :name, "Nom", class: "required" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Nom", required: true %>
        </div>
     
        <div class="form-group">
          <%= form.label :price, "Prix", class: "required" %>
          <%= form.number_field :price, class: "form-control", required: true %>
        </div>
     </div>

      
       
    </div>

 </div><!-- modal body -->
	<div class="modal-footer">
		<%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
		<%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
	</div>
<% end %>

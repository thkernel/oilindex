$("ul.errors").html("");
<% if @product.errors.any? %>
  <% @product.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".product").html("<%= escape_javascript(render 'index') %>");
  $("#product-modal").modal("hide");
 
<% end %>
$("ul.errors").html("");
<% if @registration_reason.errors.any? %>
  <% @registration_reason.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".registration-reasons").html("<%= escape_javascript(render 'index') %>");
  $("#registration-reason-modal").modal("hide");
 
<% end %>
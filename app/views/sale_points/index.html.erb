<p id="notice"><%= notice %></p>

<h1>Sale Points</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sale_points.each do |sale_point| %>
      <tr>
        <td><%= sale_point.name %></td>
        <td><%= sale_point.status %></td>
        <td><%= sale_point.user %></td>
        <td><%= link_to 'Show', sale_point %></td>
        <td><%= link_to 'Edit', edit_sale_point_path(sale_point) %></td>
        <td><%= link_to 'Destroy', sale_point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sale Point', new_sale_point_path %>

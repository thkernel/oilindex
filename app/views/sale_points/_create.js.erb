$("ul.errors").html("");
<% if @sale_point.errors.any? %>
  <% @sale_point.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".sale-points").html("<%= escape_javascript(render 'index') %>");
  $("#sale-point-modal").modal("hide");
 
<% end %>
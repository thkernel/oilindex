<%= form_with(model: contact_form, local: true) do |form| %>
  <% if contact_form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact_form.errors.count, "error") %> prohibited this contact_form from being saved:</h2>

      <ul>
      <% contact_form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :first_name, "Prénom", class: "required" %>
          <%= form.text_field :first_name, class: "form-control", placeholder: "Prénom" , required: true%>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :last_name, "Nom", class: "required" %>
          <%= form.text_field :last_name,  class: "form-control", placeholder: "Nom" , required: true %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :phone, "Téléphone" %>
          <%= form.text_field :phone, class: "form-control", placeholder: "Téléphone" , required: true %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :email, "Email" %>
          <%= form.email_field :email , class: "form-control", placeholder: "Email"  %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md">
        <div class="form-group">
          <%= form.label :subject, "Objet", class: "required" %>
          <%= form.text_field :subject,  class: "form-control", placeholder: "Objet" , required: true %>
        </div>

        <div class="form-group">
          <%= form.label :message, "Message", class: "required" %>
          <%= form.text_area :message, rows: 8,  class: "form-control", placeholder: "Votre message ici!" , required: true %>
        </div>
      </div>
    </div>
 

  <div class="form-group">
    <%= form.submit "Envoyer", class: "btn btn-primary"%>
  </div>
<% end %>
